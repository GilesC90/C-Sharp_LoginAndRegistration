@model LogAndReg.Models.User;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Profile</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <div>
                <h3>Register to this Cool Site</h3>
                <a href="/welcomeback">
                    <h3>Login</h3>
                </a>
            </div>
            <div class="card-body">
            <form action="/create" method="POST">
                <div class="form-group">
                    <span asp-validation-for="FirstName"></span>
                    <label asp-for="FirstName">Name:</label>
                    <input asp-for="FirstName" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="LastName"></span>
                    <label asp-for="LastName">Last Name:</label>
                    <input asp-for="LastName" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Email"></span>
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Confirm"></span>
                    <label asp-for="Confirm">Confirm Password:</label>
                    <input asp-for="Confirm" class="form-control" rows="3">
                </div>
                <button type="submit" class="btn btn-success">Register Account</button>
            </form>
        </div>
    </div>
</body>
</html>